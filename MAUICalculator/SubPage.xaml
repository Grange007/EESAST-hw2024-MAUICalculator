<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUICalculator.SubPage"
             Title="Advanced Calculator">
    <!-- 使用Grid作为根布局 -->
    <Grid RowSpacing="7" ColumnSpacing="6" Margin="20">

        <!-- 设置七行六列的网格 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 使用Label显示计算结果，并占据第一行四列 -->
        <Label x:Name="lastNumberS" Text="" FontSize="Medium" HorizontalTextAlignment="End"  Grid.Row="0" Grid.ColumnSpan="6" TextColor="gray"/>
        <Label x:Name="displayLabel" Text="0" FontSize="Large" HorizontalTextAlignment="End" Grid.Row="1" Grid.ColumnSpan="6" />

        <!-- 使用Button创建键盘按钮，并占据特定的Grid位置，设置Clicked事件处理程序 -->
        <Button Text="sin" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="2" Grid.Column="0"/>
        <Button Text="cos" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="2" Grid.Column="1"/>
        <Button Text="AC" Background="LightSkyBlue" Clicked="OnClearClicked" Grid.Row="2" Grid.Column="2" Grid.RowSpan="1" Grid.ColumnSpan="2"/>
        <Button Text="DEL" Background="LightSkyBlue" Clicked="OnDeleteClicked" Grid.Row="2" Grid.Column="4"/>
        <Button Text="/" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="2" Grid.Column="5"/>

        <Button Text="tan" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="3" Grid.Column="0"/>
        <Button Text="√" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="3" Grid.Column="1"/>
        <Button Text="7" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="3" Grid.Column="2"/>
        <Button Text="8" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="3" Grid.Column="3"/>
        <Button Text="9" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="3" Grid.Column="4"/>
        <Button Text="*" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="3" Grid.Column="5"/>

        <Button Text="lg" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="4" Grid.Column="0"/>
        <Button Text="ln" Background="LightSkyBlue" Clicked="OnSpecialOperatorClicked" Grid.Row="4" Grid.Column="1"/>
        <Button Text="4" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="4" Grid.Column="2"/>
        <Button Text="5" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="4" Grid.Column="3"/>
        <Button Text="6" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="4" Grid.Column="4"/>
        <Button Text="-" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="4" Grid.Column="5"/>

        <Button Text="^" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="5" Grid.Column="0"/>
        <Button Text="!" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="5" Grid.Column="1"/>
        <Button Text="1" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="5" Grid.Column="2"/>
        <Button Text="2" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="5" Grid.Column="3"/>
        <Button Text="3" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="5" Grid.Column="4"/>
        <Button Text="+" Background="LightSkyBlue" Clicked="OnOperatorClicked" Grid.Row="5" Grid.Column="5"/>

        <Button Text="e" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="6" Grid.Column="0"/>
        <Button Text="π" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="6" Grid.Column="1"/>
        <Button Text="0" Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="2"/>
        <Button Text="." Background="LightSkyBlue" Clicked="OnNumberClicked" Grid.Row="6" Grid.Column="4"/>
        <Button Text="=" Background="LightSkyBlue" Clicked="OnEqualClicked" Grid.Row="6" Grid.Column="5"/>

    </Grid>
</ContentPage>